@model IQueryable<CourseProject.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img style="width: 100%; height: auto; display: block;" src="https://s1.1zoom.ru/big7/888/Eyes_Owls_Bubo_502568.jpg" alt="...">
                <div class="caption">
                    <h3>@product.Name</h3>
                    <p>@product.Description</p>
                    <h3>@product.Price</h3>
                    <p>
                        <a href="#" class="btn btn-primary" role="button">Button</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>